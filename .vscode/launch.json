    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Debug typescript",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}//server//src//server.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["tsx", "${file}"],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}